PORT=5000
MONGODB_URI=mongodb://localhost:27017/sharecare
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRES_IN=7d
NODE_ENV=development
API_URL=http://localhost:5000

# Admin User Configuration (optional - defaults will be used if not set)
# IMPORTANT: Change these in production!
ADMIN_EMAIL=admin@sharecare.com
ADMIN_USERNAME=admin
ADMIN_PASSWORD=Admin@123456

# Sample User Password (for development/testing only)
SAMPLE_USER_PASSWORD=User@123456

# Cloudinary Configuration (for cloud image storage)
# Sign up at https://cloudinary.com and get your credentials
# When these are set, images will be stored in Cloudinary instead of locally
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
